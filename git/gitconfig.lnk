# This is Git's per-user configuration file.
[user]
  name = Lucas Giacomazzi
  email = lucasgiacomazzi@gmail.com
[init]
  defaultBranch= main
	templateDir = /Users/lucasdanielgiacomazzi/.dotfiles/git/templates
[color]
  diff = auto
  status = auto
  branch = auto
  interactive = auto
  ui = auto
[color "branch"]
  current = green bold
  local = green
  remote = red bold
[color "diff"]
  meta = yellow bold
  frag = magenta bold
  old = red bold
  new = green bold
[color "status"]
  added = green bold
  changed = yellow bold
  untracked = red
[color "sh"]
  branch = yellow
[branch]
  # set up 'git pull' to rebase instead of merge
  autosetuprebase = always
[pull]
  rebase = true
[rebase]
  instructionFormat = "[%an - %ar] %s"
  autoStash = true
